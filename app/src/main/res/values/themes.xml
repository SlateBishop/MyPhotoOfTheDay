<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlternativeTheme" parent="MainTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomAppBarTint">
        <item name="backgroundTint">@color/teal_700</item>
    </style>

    <style name="BottomSheetStyle">
        <item name="android:background">@color/bottom_sheet_background_color</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">@dimen/bottom_sheet_peekHeight</item>
    </style>

    <style name="BottomSheetHeaderTextStyle">
        <item name="android:layout_marginTop">@dimen/bottom_sheet_margin</item>
        <item name="android:paddingStart">@dimen/bottom_sheet_padding</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/photo_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetExplanationTextStyle">
        <item name="android:paddingStart">@dimen/bottom_sheet_padding</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_padding</item>
        <item name="android:textSize">@dimen/photo_explanation_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BottomSheetCalendarHeaderTextStyle" parent="BottomSheetHeaderTextStyle">
        <item name="android:layout_marginTop">@dimen/bottom_sheet_choose_date_text_margin</item>
        <item name="android:textSize">@dimen/photo_calendar_header_text_size</item>
    </style>


</resources>