<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_themes_header">

        <ListPreference
            app:key="theme"
            app:title="@string/settings_themes_title"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="MainTheme"/>

    </PreferenceCategory>

</PreferenceScreen>